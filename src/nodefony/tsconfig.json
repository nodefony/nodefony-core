{
  "include": ["./rollup.config.ts", "./src"],
  "exclude": [
    "src/tests/**/*",
    "src/bin/**/*",
    "node_modules",
    "dist",
    "src/service/babel"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
