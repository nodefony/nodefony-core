{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "../",
    "outDir": "../../dist",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    //"allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    //"skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "types": [
      "node"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "stripInternal": true
  },
  "include": [
    //"./**/*.ts",
    //"src/**/*.d.ts",
    //"src/types/**/*.d.ts",
    //"./**/*.test.ts"
    "./*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}