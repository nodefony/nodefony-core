{
  "extends": "./tsconfig.base.json",
  "include": [
    "./rollup.config.ts",
    "./src"
  ],
  "exclude": [
    "src/tests/**/*",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "stripInternal": true
  }
}