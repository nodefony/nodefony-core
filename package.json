{
  "name": "@nodefony/nodefony-core",
  "version": "10.0.0",
  "description": "Core Nodefony Framework",
  "main": "dist/index.js",
  "types": "src/types/index.d.ts",
  "type": "module",
  "private": false,
  "bin": {
    "nodefony": "bin/nodefony"
  },
  "keywords": [
    "nodefony",
    "node-js",
    "javascript"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "nodefony": "node ./bin/nodefony",
    "start": "node ./bin/nodefony",
    "test": "npm run test:ts && npm run test:transpiled",
    "test:ts": "tsc && ts-mocha src/tests/**/*.test.ts",
    "test:transpiled": "tsc -p tsconfig.test.json && mocha dist/tests/*.js"
  },
  "dependencies": {
    "cli-color": "2.0.3",
    "lodash": "4.17.21",
    "shortid": "2.2.16"
  },
  "devDependencies": {
    "@types/chai": "4.3.11",
    "@types/cli-color": "2.0.6",
    "@types/lodash": "4.14.202",
    "@types/mocha": "10.0.6",
    "@types/node": "20.10.4",
    "@types/shortid": "0.0.32",
    "chai": "4.3.10",
    "eslint": "8.55.0",
    "mocha": "10.2.0",
    "ts-mocha": "10.0.0",
    "tslint": "6.1.3",
    "typescript": "5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nodefony/nodefony.git"
  },
